<main class="lista-vacantes">
  <h2>Lista de Vacantes</h2>
  {{#if vacantes.length}}

    {{#each vacantes as | vacante|}}
      <div class="vacante">
        <div class="caja">
          <h3>{{vacante.empresa}}</h3>
          <p class="puesto">{{titulo}}</p>
        </div>
        <div class="caja">
          <p class="etiqueta">Ubicación</p>
          <p class="nombre">{{ubicacion}}</p>
        </div>
        <div class="caja">
          <p class="etiqueta">Contrato</p>
          <p class="nombre contrato">{{contrato}}</p>
        </div>
        <div class="caja">
          <a href="/vacantes/{{url}}" class="btn btn-verde">Más Información</a>
        </div>
      </div>
    {{/each}}
  {{else}}
    <p>No hay vacantes Publicadas</p>
  {{/if}}

</main>